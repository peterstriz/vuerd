{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@@types/*": ["types/*"]
    },
    "plugins": [
      {
        "name": "typescript-styled-plugin",
        "tags": ["css"]
      }
    ],
    "types": ["jest", "vite/client"]
  },
  "include": ["src/**/*.ts", "types/**/*.ts"],
  "exclude": ["node_modules"]
}
